<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/scan_an_nfc_tag_to_login"
        android:textColor="@color/black"
        android:textColorHighlight="#272727"
        android:textColorHint="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/nfcIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icons_height"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:visibility="visible"
        android:src="@drawable/nfc_icon"
        android:contentDescription="@string/nfc_icon_description" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icons_height"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>